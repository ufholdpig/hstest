# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UrlController.index

# Url shortening related functions
GET	/url/*url                   controllers.UrlController.fromLongUrl(url: String)
GET	/:url                       controllers.UrlController.fromShortUrl(url: String)
GET	/count/*hash		    controllers.UrlController.urlStat(hash: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
